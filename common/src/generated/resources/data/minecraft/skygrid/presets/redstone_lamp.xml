<preset>
   <block id="redstone_lamp">
      <side on="up" probability="1">
         <block id="redstone_wire"/>
         <tag id="pressure_plates">
            <except>
               <name pattern="polished_blackstone_pressure_plate"/>
               <name pattern="crimson_pressure_plate"/>
               <name pattern="warped_pressure_plate"/>
            </except>
         </tag>
      </side>
      <surround probability="1">
         <block id="lever"/>
         <tag id="buttons">
            <except>
               <name pattern="polished_blackstone_button"/>
               <name pattern="crimson_button"/>
               <name pattern="warped_button"/>
            </except>
         </tag>
         <direction>down</direction>
         <direction>up</direction>
         <direction>north</direction>
         <direction>south</direction>
         <direction>west</direction>
         <direction>east</direction>
      </surround>
   </block>
</preset>